{%- assign yoast_seo_page_type = request.page_type -%}
{%- if request.page_type == "collection" -%}
	{%- if current_tags -%}
		{%- assign yoast_seo_page_type = "product_tags" -%}
	{%- elsif collection.handle == "all" -%}
		{%- assign yoast_seo_page_type = "collection_archive" -%}
	{%- endif -%}
{%- endif -%}
{%-  if request.page_type == "blog" and current_tags -%}
	{%- assign yoast_seo_page_type = "blog_post_tags" -%}
{%- endif -%}

