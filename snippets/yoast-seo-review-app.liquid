{%- liquid
	assign reviewApp = ""

	if product.metafields.reviews.rating and product.metafields.reviews.rating.value and product.metafields.reviews.rating_count
		assign reviewApp = "Shopify standard metafields"
	elsif content_for_header contains "judge.me"
		assign reviewApp = "JudgeMe"
	elsif content_for_header contains "loox.io"
		assign reviewApp = "Loox"
	elsif product.metafields.alireviews and product.metafields.alireviews.seo_rating_review_key_script
		assign reviewApp = "AliReviews"
	elsif content_for_header contains "opinew.com"
		assign reviewApp = "Opinew"
	endif

	echo reviewApp
-%}
