{%- if yoast_seo_page_type == null -%}
	{%- capture yoast_seo_page_type -%}{%- render 'yoast-seo-page-type' -%}{%- endcapture -%}
{%- endif -%}
{%- if yoast_seo_page_type != "404" and yoast_seo_page_type != "search" -%}
	{%- capture no_image_index -%}{%- render 'yoast-seo-variable-from-optimize-module', variable: "is_robots_noimageindex" -%}{%- endcapture -%}
	{%- if no_image_index == "true" -%}
		{%- assign image = "noimageindex" -%}
	{%- else -%}
		{%- assign image = "max-image-preview:large" -%}
	{%- endif -%}
{%- endif -%}
{{- image -}}
