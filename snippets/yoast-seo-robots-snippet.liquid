{%- if yoast_seo_page_type == null -%}
	{%- capture yoast_seo_page_type -%}{%- render 'yoast-seo-page-type' -%}{%- endcapture -%}
{%- endif -%}
{%- if yoast_seo_page_type != "404" and yoast_seo_page_type != "search" -%}
	{%- capture no_snippet -%}{%- render 'yoast-seo-variable-from-optimize-module', variable: "is_robots_nosnippet" -%}{%- endcapture -%}
	{%- if no_snippet == "true" -%}
		{%- assign snippet = "nosnippet" -%}
	{%- else -%}
		{%- assign snippet = "max-snippet:-1" -%}
	{%- endif -%}
{%- endif -%}
{{- snippet -}}
