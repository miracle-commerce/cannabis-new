{%- liquid
	assign content = ""

	case variable

		when "title"
			if page_title
				assign content = page_title
			else
				assign content = shop.name
			endif

		when "description"
			if page_description
				assign content = page_description
			endif

		when "canonical_url"
			assign content = canonical_url

	endcase
-%}
{{- content -}}
