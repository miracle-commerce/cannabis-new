{%- capture yoast_seo_page_type -%}{%- render 'yoast-seo-page-type' -%}{%- endcapture -%}
{%- case yoast_seo_page_type -%}
	{%- when "page" -%}{%- assign return = page[variable] -%}
	{%- when "article" -%}{%- assign return = article[variable] -%}
	{%- when "product" -%}{%- assign return = product[variable] -%}
	{%- when "collection" -%}{%- assign return = collection[variable] -%}
	{%- when "blog" -%}{%- assign return = blog[variable] -%}
{%- endcase -%}
{%- if as_json -%}
	{{- return | json -}}
{%- else -%}
	{{- return -}}
{%- endif -%}
